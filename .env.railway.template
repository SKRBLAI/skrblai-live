# ============================================================
# MINIMAL V1 REQUIRED (Railway production truth)
# ============================================================
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=
OPENAI_API_KEY=
FF_SITE_VERSION=v1
FF_N8N_NOOP=true
NEXT_PUBLIC_ENABLE_STRIPE=false
FF_CLERK=0

# ============================================================
# OPTIONAL / FEATURE-DEPENDENT
# ============================================================

# URLs
NEXT_PUBLIC_BASE_URL=https://skrblai.io
NEXT_PUBLIC_SITE_URL=https://skrblai.io

# Stripe (ONLY if NEXT_PUBLIC_ENABLE_STRIPE=true)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_API_VERSION=

# Google OAuth (ONLY if used)
NEXT_PUBLIC_GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Security / Captcha
NEXT_PUBLIC_HCAPTCHA_SITEKEY=
HCAPTCHA_SECRET=

# Usage Limits (optional)
NEXT_PUBLIC_FREE_SCANS_GUEST=3
NEXT_PUBLIC_FREE_SCANS_EMAIL=5
NEXT_PUBLIC_TRIAL_DURATION_DAYS=3
NEXT_PUBLIC_DAILY_SCAN_LIMIT=10

# System
NODE_ENV=production

